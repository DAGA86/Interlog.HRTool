@model Interlog.HRTool.Data.Models.Company

@{
    ViewData["Title"] = Localize("title.create");
}
@*<div class="container">*@
    <div class="row justify-content-center">
        <div class="col-5">

            <h1>@Localize("title.create")</h1>
            <hr />
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">@Localize("company.title")</h3>
                </div>
                <form asp-action="Create">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">@Localize("company.name")</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <input type="submit" value="@Localize("general.button.create")" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
@*</div>*@

<div>
    <a asp-action="Index">@Localize("general.button.backToList")</a>
</div>


@section Scripts {
    <!-- bs-custom-file-input -->
    <script src="../../plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
