@model IEnumerable<Interlog.HRTool.Data.Models.Company>

@{
    ViewData["Title"] = Localize("customer.page.create.title");
}

<div>
    <h3>@Localize("customer.page.create.title")</h3>
</div>
<p>
    <a asp-action="Create">Create New</a>
</p>
@if (TempData["Success"] != null)
{
    <div class="text-success">@TempData["Success"]</div>
}
else if (TempData["Error"] != null)
{

    <div class="text-danger">@TempData["Error"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departments)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Departments.Count
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
